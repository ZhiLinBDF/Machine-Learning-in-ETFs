y_train_ret = pd.DataFrame()

for i in y_train[1:]:
    nlist = list(y_train[i])
    ret = [0]*(len(nlist)-1)
    for j in range(len(ret)):
        ret[j] = np.log(nlist[j+1]/nlist[j])
        y_train_ret[i] = ret

# y test return
y_test_ret = pd.DataFrame()

for i in y_test[1:]:
    nlist = list(y_test[i])
    ret = [0]*(len(nlist)-1)
    for j in range(len(ret)):
        ret[j] = np.log(nlist[j+1]/nlist[j])
        y_test_ret[i] = ret


